{
  "name": "todo-highlighter",
  "displayName": "todo-highlighter",
  "description": "Highlites special comments",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],

  "activationEvents": [
    "*",
    "onCommand:todo-highlighter.helloWorld"
  ],

  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "todo-highlighter.helloWorld",
        "title": "TODO Highlighter: Hello World"
      }
    ]
  },

  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.39.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
